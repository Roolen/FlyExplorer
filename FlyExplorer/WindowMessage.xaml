<Window x:Name="WindowForMessage" x:Class="FlyExplorer.WindowMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlyExplorer"
        mc:Ignorable="d"
        Title="WindowMessage" Height="300" Width="400" WindowStyle="None" Background="#E56EBDDC" AllowsTransparency="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="133*"/>
            <RowDefinition Height="48*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="TextForMessage" Margin="0,19,0,26" TextWrapping="Wrap" Text="TextBlock" TextAlignment="Center" FontSize="24" Grid.Row="1"/>
        <Button x:Name="ButtonOK" Content="OK" HorizontalAlignment="Stretch" Margin="126,13,126,9" Grid.Row="2" Click="ButtonOK_Click" FontSize="18"/>
        <TextBlock x:Name="Title" Margin="0" TextWrapping="Wrap" Text="TextBlock" TextAlignment="Center" MouseLeftButtonDown="Title_MouseLeftButtonDown" Background="#FF5A9DB0"/>

    </Grid>
</Window>
