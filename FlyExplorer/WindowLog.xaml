<Window x:Class="FlyExplorer.WindowLog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlyExplorer"
        mc:Ignorable="d"
        Title="WindowLog" Height="150" Width="300">
    <Grid x:Name="grid">
        <TextBlock x:Name="TextBoxLog" TextWrapping="Wrap" Height="{Binding ActualHeight, ElementName=grid, Mode=OneWay}" Width="{Binding ActualWidth, ElementName=grid, Mode=OneWay}" Background="Black" Foreground="#FF0BC546"><Run Text="TextBlock"/></TextBlock>

    </Grid>
</Window>
