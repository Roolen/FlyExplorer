<UserControl x:Class="FlyExplorer.ControlElements.TabButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlyExplorer.ControlElements"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" MouseDoubleClick="UserControl_MouseDoubleClick">
    <Grid>
        <TextBlock x:Name="TextBlockInTabButton" TextWrapping="Wrap" Text="TextBlock">
            <TextBlock.ContextMenu>
                <ContextMenu>
                    <MenuItem x:Name="CloseTab" Header="Close tab" Command="" Click="MenuItem_Click"/>
                </ContextMenu>
            </TextBlock.ContextMenu>
        </TextBlock>

    </Grid>
</UserControl>
