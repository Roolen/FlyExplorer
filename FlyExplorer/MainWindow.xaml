<Window x:Name="MainWindow1" x:Class="FlyExplorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlyExplorer"
        mc:Ignorable="d"
        Title="FlyExplorer" Height="350" Width="525" Opacity="0.99" FontFamily="Trajan Pro" WindowStyle="ThreeDBorderWindow">
    <Grid x:Name="MainGrid" Margin="0,0,0,-1">
        <Menu Height="17" VerticalAlignment="Top" Width="{Binding ActualWidth, ElementName=MainWindow1, Mode=OneWay}" FontFamily="Trajan Pro">
            <MenuItem Header="Files" Height="17" Width="50">
                <MenuItem x:Name="ExitElement" Header="Exit" Height="23" HorizontalAlignment="Left" Width="155"/>
            </MenuItem>
            <MenuItem Header="Select" Height="17" Width="55"/>
            <MenuItem Header="Commands" Height="17" Width="90"/>
        </Menu>
        <ToolBar Height="25" Margin="0,17,0,0" VerticalAlignment="Top"/>
        <TabControl x:Name="TabControl" Margin="0,42,0,0">
            <TabItem Header="TabItem1">
                <Grid Background="#FFE5E5E5" >
                    <TextBlock x:Name="MainText" HorizontalAlignment="Center" Margin="0" TextWrapping="Wrap" VerticalAlignment="Top" Text="Text"/>
                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
